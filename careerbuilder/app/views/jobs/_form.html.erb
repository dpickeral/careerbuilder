<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :active %>
    <%= f.input :applypath %>
    <%= f.input :requirements %>
    <%= f.input :worktype %>
    <%= f.input :salary %>
    <%= f.input :city %>
    <%= f.input :state %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
